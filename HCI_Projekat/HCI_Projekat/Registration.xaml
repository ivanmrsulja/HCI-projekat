<Window x:Class="HCI_Projekat.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI_Projekat"
        xmlns:val="clr-namespace:HCI_Projekat.Validation"
        mc:Ignorable="d"
        Title="Registracija korisnika" Height="649.871" Width="932.873">
    <DockPanel Margin="0,0,2,3">
        <Grid DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="20" Orientation="Horizontal" Width="Auto" HorizontalAlignment="Center">
                <Label FontFamily="Impact" FontSize="30">REGISTRACIJA</Label>
            </StackPanel>
            <Label Margin="10" FontSize="20" Grid.Row="1" Grid.Column="0" >Ime:</Label>
            <TextBox Margin="10" Name="ime" FontSize="20" Grid.Row="1" Grid.Column="1" MinWidth="200" MinHeight="20" MaxWidth="220" TextChanged="FormStateChanged"></TextBox>
            <Label Margin="10" FontSize="20" Grid.Row="2" Grid.Column="0" >Prezime:</Label>
            <TextBox Margin="10" Name="prezime" FontSize="20" Grid.Row="2" Grid.Column="1" MinWidth="200" MinHeight="20" MaxWidth="220" TextChanged="FormStateChanged"></TextBox>
            <Label Margin="10" FontSize="20" Grid.Row="3" Grid.Column="0" >Korisničko ime:</Label>
            <TextBox Margin="10" Name="user" FontSize="20" Grid.Row="3" Grid.Column="1" MinWidth="200" MinHeight="20" MaxWidth="220" TextChanged="FormStateChanged">
                <TextBox.Text>
                    <Binding Path="Username" UpdateSourceTrigger="PropertyChanged" Mode="OneWayToSource">
                        <Binding.ValidationRules>
                            <val:UsernameValidationRule ValidationStep="RawProposedValue"/>
                            <val:IsBlankValidationRule ValidationStep="RawProposedValue"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <AdornedElementPlaceholder Grid.Column="0" Grid.Row="0" x:Name="textBox2"/>
                            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding [0].ErrorContent}" FontSize="16" VerticalAlignment="Center" Foreground="Red"/>
                        </Grid>
                    </ControlTemplate>
                </Validation.ErrorTemplate>

            </TextBox>
            <Label Margin="10" FontSize="20" Grid.Row="4" Grid.Column="0" >Lozinka:</Label>
            <PasswordBox Margin="10" Name="pass" FontSize="20" Grid.Row="4" Grid.Column="1" MinWidth="200" MinHeight="20" MaxWidth="220" PasswordChanged="FormStateChanged" ></PasswordBox>
            <Label Margin="10" FontSize="20" Grid.Row="5" Grid.Column="0" >Potvrdi lozinku:</Label>
            <PasswordBox Margin="10" Name="passConf" FontSize="20" Grid.Row="5" Grid.Column="1" MinWidth="200" MinHeight="20" MaxWidth="220" PasswordChanged="FormStateChanged"></PasswordBox>
            <val:PasswordValidator 
                  Box1="{Binding ElementName=pass}" 
                  Box2="{Binding ElementName=passConf}" />
            
            <Label Margin="10" FontSize="20" Grid.Row="6" Grid.Column="0" >Email:</Label>
            <TextBox Margin="10" Name="email" FontSize="20" Grid.Row="6" Grid.Column="1" MinWidth="200" MinHeight="20" MaxWidth="220" TextChanged="FormStateChanged">
                <TextBox.Text>
                    <Binding Path="Email" UpdateSourceTrigger="PropertyChanged" Mode="OneWayToSource">
                        <Binding.ValidationRules>
                            <val:EmailValidationRule ValidationStep="RawProposedValue"/>
                            <val:IsBlankValidationRule ValidationStep="RawProposedValue"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <AdornedElementPlaceholder Grid.Column="0" Grid.Row="0" x:Name="textBox1"/>
                            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding [0].ErrorContent}" FontSize="16" VerticalAlignment="Center" Foreground="Red"/>
                        </Grid>
                    </ControlTemplate>
                </Validation.ErrorTemplate>

            </TextBox>
            <Label Margin="10" FontSize="20" Grid.Row="7" Grid.Column="0" >Adresa:</Label>
            <TextBox Margin="10" Name="adresa" FontSize="20" Grid.Row="7" Grid.Column="1" MinWidth="200" MinHeight="20" MaxWidth="220" TextChanged="FormStateChanged"></TextBox>
            <Label Margin="10" FontSize="20" Grid.Row="8" Grid.Column="0" >Telefon:</Label>
            <TextBox Margin="10" Name="telefon" FontSize="20" Grid.Row="8" Grid.Column="1" MinWidth="200" MinHeight="20" MaxWidth="220" TextChanged="FormStateChanged">
                <TextBox.Text>
                    <Binding Path="Telefon" UpdateSourceTrigger="PropertyChanged" Mode="OneWayToSource">
                        <Binding.ValidationRules>
                            <val:TelefonValidationRule ValidationStep="RawProposedValue"/>
                            <val:IsBlankValidationRule ValidationStep="RawProposedValue"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <AdornedElementPlaceholder Grid.Column="0" Grid.Row="0" x:Name="textBox3"/>
                            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding [0].ErrorContent}" FontSize="16" VerticalAlignment="Center" Foreground="Red"/>
                        </Grid>
                    </ControlTemplate>
                </Validation.ErrorTemplate>

            </TextBox>
            <Separator Visibility="Hidden" Grid.Row="9" Grid.Column="1" MinHeight="20"></Separator>
            <Grid Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" MinWidth="70" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button Margin="5,0,0,0" Grid.Row="0" Grid.Column="0" FontSize="20"  HorizontalAlignment="Left" Width="87" Click="Odustani">Odustani</Button>
                <Button Name="registrujSe" IsEnabled="False" Grid.Row="0" Grid.Column="2" FontSize="20"  HorizontalAlignment="Right" Width="105" Click="Registracija">Registruj se</Button>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
