<Window x:Class="HCI_Projekat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI_Projekat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="740.547">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="20" Orientation="Horizontal" Width="Auto" HorizontalAlignment="Center">
                <Label FontSize="24">LOGIN</Label>
            </StackPanel>
            <Label FontSize="20" Grid.Row="1" Grid.Column="0" >Username:</Label>
            <TextBox FontSize="20" Grid.Row="1" Grid.Column="1" MinWidth="200" MinHeight="20" ></TextBox>
            <Label FontSize="20" Grid.Row="2" Grid.Column="0" >Password:</Label>
            <PasswordBox FontSize="20" Grid.Row="2" Grid.Column="1" MinWidth="200" MinHeight="20"></PasswordBox>
            <Separator Visibility="Hidden" Grid.Row="3" Grid.Column="1" MinHeight="20"></Separator>
            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                <Button FontSize="20"  HorizontalAlignment="Stretch" Click="UlogujSe">Uloguj se</Button>
                <Separator Visibility="Hidden" MinWidth="185"></Separator>
                <Button FontSize="20"  HorizontalAlignment="Stretch" Click="RegistrujSe">Registruj se</Button>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
